# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_call_intelligence
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-call-intelligence
KAFKA_GROUP_ID=ai-call-intelligence-group

# Alianza API Configuration
ALIANZA_API_BASE_URL=https://api.alianza.com
ALIANZA_API_USERNAME=your_username
ALIANZA_API_PASSWORD=your_password
ALIANZA_PARTITION_ID=your_partition_id

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret

# AI Services Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=your-org-id

# Transcription Service
TRANSCRIPTION_SERVICE_URL=http://localhost:5001
TRANSCRIPTION_MODEL=whisper-1

# Sentiment Service
SENTIMENT_SERVICE_URL=http://localhost:5002
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english

# Intent Service
INTENT_SERVICE_URL=http://localhost:5003
INTENT_MODEL=rasa

# Summarization Service
SUMMARIZATION_SERVICE_URL=http://localhost:5004
SUMMARIZATION_MODEL=gpt-4

# CRM Integration
SALESFORCE_INSTANCE_URL=https://yourinstance.salesforce.com
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
